<UserControl x:Class="Astralis.Views.Cards.EndGameUserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:p="clr-namespace:Astralis.Properties"
             xmlns:local="clr-namespace:Astralis.Views.Cards"
             mc:Ignorable="d" 
             d:DesignHeight="90" d:DesignWidth="550">
    <Grid>
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Image x:Name="imgUser" HorizontalAlignment="Left" Height="85" Margin="5,10,0,0" VerticalAlignment="Top" Width="90"/>
            <Label x:Name="lblNickname" Grid.Column="1" HorizontalContentAlignment="Center" Width="200" Content="nickname" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Label x:Name="lblTeam" Width="200" Height="30" Grid.Column="3" HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Center"/>

        </Grid>
    </Grid>
</UserControl>
