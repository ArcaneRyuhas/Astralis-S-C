<Window x:Class="Astralis.Views.Cards.GuestInvitation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Astralis.Views.Cards"
        xmlns:p="clr-namespace:Astralis.Properties"
        mc:Ignorable="d" 
        Title="GameWindow" Height="250" Width="250"
        d:DesignHeight="250" d:DesignWidth="250"
        ResizeMode="NoResize" 
        WindowStartupLocation="CenterScreen">


    <Grid Background="Black">
        <Button x:Name="btnJoin" Content="{x:Static p:Resources.btnJoin}" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Click="BtnJoinClick"/>
        <Label x:Name="lblCodeInvitation" Content="{x:Static p:Resources.lblCodeInvitation}" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtInvitationCode" PreviewTextInput="TextLimeterForCode" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,88,0,0"/>
    </Grid>
</Window>
