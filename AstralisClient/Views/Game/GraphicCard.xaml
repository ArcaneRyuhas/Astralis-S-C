<UserControl x:Class="Astralis.Views.Game.GraphicCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Astralis.Views.Game"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="142
             ">
    <Grid MouseLeftButtonDown="GraphicCardOnLeftClick" MouseRightButtonDown="GraphicCardOnRightClick">
        <Grid.Background>
            <ImageBrush ImageSource="InGameAssets/Card.png"/>
        </Grid.Background>
        <Label x:Name="lblAttack" Content="1" HorizontalAlignment="Left" Margin="8,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHealth" Content="1" HorizontalAlignment="Left" Margin="90,158,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblMana" Content="1" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        <Label x:Name="lblType" HorizontalContentAlignment="Center" Content="Mago" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="30,160,0,0" Width="63" FontSize="12"/>
        <Image x:Name="imgCard" HorizontalAlignment="Left" Height="100" Margin="21,38,0,0" VerticalAlignment="Top" Width="100"/>
    </Grid>
</UserControl>
