            </ScrollViewer>
            <TextBox Text="Buscar Usuario" Height="25" TextAlignment="Center" Width="120" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        </Grid>
        <Border BorderBrush="#B52727" BorderThickness="4" CornerRadius="20">
        </Border>
    </Grid>
    </UserControl>
