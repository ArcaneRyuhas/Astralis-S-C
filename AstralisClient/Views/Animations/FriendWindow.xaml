<UserControl x:Class="Astralis.Views.Animations.FriendWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Astralis.Views.Animations"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="250"
             Background="Black">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" Width="235" Height="280">
                <Grid x:Name="gdFriends"/>
            </ScrollViewer>
            <TextBox x:Name="txtSearchUser" Text="txtBuscarUsuario" Height="26" TextAlignment="Center" Width="136" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <Button x:Name="btnSentFriendRequest" Grid.Row="1" Height="20" Width="20" HorizontalAlignment="Left" Click="btnSendFriendRequest_Click">
                <Rectangle Width="10" Height="10" Fill="Red"/>
            </Button>



        </Grid>
        <Border BorderBrush="#B52727" BorderThickness="4" CornerRadius="20">
            
        </Border>
    </Grid>

</UserControl>
