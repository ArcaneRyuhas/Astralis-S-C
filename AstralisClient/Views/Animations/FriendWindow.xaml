             xmlns:local="clr-namespace:Astralis.Views.Animations"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="250"
             Background="Black">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="300"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0" Width="250">
