<Window x:Class="Astralis.Views.Animations.GuestInvitation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:Astralis.Views.Animations"
        mc:Ignorable="d" 
        Title="GameWindow" Height="250" Width="250"
        d:DesignHeight="250" d:DesignWidth="250">
    
    
    <Grid Background="Black">
        <Button Content="Join" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Click="Button_Click"/>
        <Label Content="Code Invitation" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="tbInvitationCode" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Margin="0,88,0,0"/>
    </Grid>
</Window>
