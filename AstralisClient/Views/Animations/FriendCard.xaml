<UserControl x:Class="Astralis.Views.Animations.FriendCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Astralis.Views.Animations"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="240">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Ellipse x:Name="ellipseOnlineStatus" Width="20" Height="20" Fill="Red" Grid.Column="0"/>
            <Label x:Name="lblNickname" Content="lblNickname" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Button x:Name="btnAcceptFriendRequest" Width="20" Height="20" Grid.Column="2" Click="btnAcceptFriendRequest_Click" Visibility="Hidden" Margin="0,30,0,10">
                <Rectangle Width="10" Height="10" Fill="GREEN"/>
            </Button>
            <Button x:Name="btnDeleteFriend" Width="20" Height="20" Grid.Column="2" Click="btnDeleteFriend_Click" Visibility="Hidden">
                <Rectangle Width="10" Height="10" Fill="Red"/>
            </Button>
            <Button x:Name="btnDenyFriendRequest" Width="20" Height="20" Grid.Column="2" Click="btnDenyFriendRequest_Click" Visibility="Hidden" Margin="0,6,0,34">
                <Rectangle Width="10" Height="10" Fill="Red"/>
            </Button>
            <Button x:Name="btnSendGameInvitation" Width="20" Height="20" Grid.Column="2" Click="btnSendGameInvitation_Click" Visibility="Hidden">
                <Rectangle Width="10" Height="10" Fill="Red"/>
            </Button>

        </Grid>
    </Grid>
</UserControl>
